---
layout: default.liquid
title: Den Antares
---
<div class="button_well">
  <p>Home of (some of) my various projects.</p>
</div>

{% for post in collections.posts.pages %}
<div class="button_panel">
  <h4>
    <a href="/{{ post.permalink }}">{{ post.title }}</a>
  </h4>
  <text style="color:#ccc">
    Den Antares - {{ post.published_date | date: "%d %b %Y" }}
  </text>
  <div class="button_panel_body">
    <!-- post.tags -->
    {% if post.excerpt != "" %}
      {{ post.excerpt }}
    {% else %}
      {{ post.content }}
    {% endif %}

    <!-- For edge cases involving document flow around floated elements -->
    <div style="clear: both;"></div>

    {% if post.excerpt != "" %}
      <a href="/{{ post.permalink }}">Continue...</a>
      <!-- So border is properly spaced below continue... link -->
      <div></div>
    {% endif %}
  </div>
</div>
{% endfor %}
